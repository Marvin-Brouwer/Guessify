.camera-card {
  width: 100%;
  min-height: 20ex;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: flex-start;
  align-items: center;
  .controls {
    grid-area: controls;
    margin: 0 -4ex 0 -4ex;
    height: 8ex;
    width: calc(100% + 8ex);
  }
  .no-premium,
  .error {
    font-weight: bold;
    color: #d71e1e;
    font-style: italic;
  }
}

.camera-request-card {
  width: 100%;
  min-height: 10ex;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: flex-start;
  align-items: center;
  padding: 4ex 4ex 0 4ex;
  position: relative;
  overflow: hidden;
  &.no-controls {
    padding: 4ex 4ex 4ex 4ex;
  }
  .details {
    grid-area: details;
    margin-top: 1ex;
    padding-top: 0ex;
    width: 100%;
  }
  .controls {
    margin: 0 -4ex 0 -4ex;
    position: relative;
  }
}

/* // todo nest */
.camera-card .controls button[disabled] img {
  opacity: 0.4;
}
.camera-card .controls button {
  width: 100%;
  height: 8ex;
  display: grid;
  grid-auto-flow: column;
  grid-template-columns: 8ex 1fr 8ex;
  grid-template-rows: 1fr;
  gap: 0em 0em;
  grid-template-areas: ". text icon";
  align-content: center;
  justify-content: center;
  align-items: center;
}

.camera-card .controls button span {
  grid-area: text;
}

.camera-card .controls button img {
  grid-area: icon;
}
.camera-request-card video,
.camera-request-card .video-overlay {
  display: block;
  width: calc(100% + 8ex);
  height: 15ex;
  display: block;
  pointer-events: none;
  object-fit: none;
  object-align: center center; /* default, anchor to center of video */
  margin: -4ex -4ex 0 -4ex;
}
.camera-request-card .video-overlay {
  background-color: rgb(255 255 255 / 20%);
  backdrop-filter: blur(8px);
  display: block;
  position: absolute;
  margin: -4ex 0 0 0;
  width: 100%;
  height: calc(15ex + 1px);
  display: grid;
  grid-auto-flow: column;
  grid-template-columns: 1fr 8ex;
  grid-template-rows: 8ex 1fr;
  gap: 2ex 2ex;
  grid-template-areas:
    ". stats"
    ". .";
}

.camera-request-card .video-overlay .stats {
  grid-area: stats;
  width: 8ex;
  height: 8ex;
  display: flex;
  margin-top: 1ex;
  flex-direction: column;
  align-content: center;
  justify-content: flex-start;
  align-items: center;
}
.camera-request-card .video-overlay img {
  width: 5ex;
  height: 5ex;
}
.camera-request-card .video-overlay span {
  text-align: center;
  font-size: 1ex;
  white-space: pre;
  line-height: 1.2ex;
  color: rgb(32, 32, 32);
}